{
  "name": "chit-chat",
  "version": "1.0.0",
  "description": "chit chat",
  "main": "index.js",
  "engine": {
    "node": "12.14.1",
    "npm": "6.13.4"
  },
  "scripts": {
    "start": "concurrently \"npm run start-srv\" \"npm run start --prefix client\"",
    "backendsrv": "nodemon server/index.js",
    "start-srv": "node server/index.js",
    "backend": "nodemon server/index.js",
    "frontend": "npm run start --prefix client",
    "dev": "concurrently \"npm run backend\" \"npm run start --prefix client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install &&  npm install --prefix client && npm run build --prefix client"
  },
  "author": "tania ijaz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongoose": "^5.4.20",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.6",
    "react-dropzone": "^10.2.2",
    "react-redux": "^5.0.7",
    "saslprep": "^1.0.3",
    "serve": "^11.3.2",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
